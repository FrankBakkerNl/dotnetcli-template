{
  "$schema": "http://json.schemastore.org/template",
  "author": "helto4real",
  "classifications": [ "NetDaemon", "Project" ],
  "identity": "NetDaemon.Template.Project.SourceDeploy",
  "name": "NetDaemon: Source deployment project template",
  "shortName": "nd-src-project",
  "sourceName": "NetDaemonSourceDeployApps",
  "tags": {
    "language": "C#",
    "type": "project"
  },
  "symbols": {
    "host": {
      "type": "parameter",
      "datatype": "text",
      "replaces": "ha_host",
      "defaultValue": "localhost"
    },
    "port": {
      "type": "parameter",
      "datatype": "text",
      "replaces": "ha_port",
      "defaultValue": "8123"
    },
    "use-ssl": {
      "type": "parameter",
      "datatype": "bool",
      "defaultValue": "false"
    },    
    "token": {
      "type": "parameter",
      "datatype": "text",
      "replaces": "ha_token",
      "defaultValue": "insert_token_later_in_appsettings"
    }
  }
}
